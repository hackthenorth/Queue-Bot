{
  "exclude": [
    "node-modules",
  ],
  "compilerOptions": {
    "incremental": true, 
    "target": "es2018", 
    "module": "commonjs", 
    "outDir": "./build", 
    "rootDir": "./src", 
    "removeComments": true, 
    "noEmit": true,                        
    "strict": true, 
    "noImplicitAny": true, 
    "strictNullChecks": false, 
    "suppressImplicitAnyIndexErrors": true,
    "moduleResolution": "node",            
    "types": ["node"],
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true  
  }
}
